<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_margin="@dimen/input_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:id="@+id/price_view"
                android:layout_below="@id/line"
                android:layout_toEndOf="@id/quantity_view"
                android:layout_height="match_parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:id="@+id/quantity_view"
                android:layout_below="@id/line"
                android:layout_alignParentStart="true"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/action_title"
                android:textSize="@dimen/header_text"
                android:layout_marginRight="@dimen/input_margin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/line"
                android:layout_below="@id/action_title"
                android:layout_marginRight="@dimen/header_text"
                android:background="@android:color/darker_gray"/>
        <android.support.v7.widget.AppCompatImageView android:layout_width="wrap_content"
                                                      android:id="@+id/action_icon"
                                                      android:layout_alignParentEnd="true"
                                                      android:src="@drawable/ic_action_bin"
                                                      android:layout_toStartOf="@id/action_title"
                                                      android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>